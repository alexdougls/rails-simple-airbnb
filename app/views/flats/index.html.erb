<div class="container">
  <h1>All our flats</h1>
  <div class="d-flex justify-content-between">
    <% @flats.each do |flat| %>
      <div class="card m-2" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
          <p class="card-text"><%= flat.number_of_guests %> | <%= flat.price_per_night %> </p>
          <div class="card-link-footer border-top d-flex justify-content-around">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat) %>
            <%= link_to 'Delete', flat_path(flat),
                method: :delete,
                data: { confirm: "Are you sure?" },
                :class => 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
